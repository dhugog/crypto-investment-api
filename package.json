{
  "name": "crypto-investment-api",
  "packageManager": "yarn@4.2.2",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/memory-cache": "^0.2.5",
    "@types/node": "20.11.25",
    "@types/nodemailer": "^6",
    "@types/pg": "^8",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "cross-var": "^1.1.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "nodemon": "3.1.0",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.4.2"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "concurrently": "^8.2.2",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "memory-cache": "^0.2.0",
    "nodemailer": "^6.9.13",
    "pg": "^8.11.5",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch \"*.ts\" --exec \"node -r ts-node/register --env-file=.env\" ./src/index.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typeorm": "typeorm-ts-node-commonjs -d ./ormconfig.ts",
    "migration:create": "cross-var ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create ./src/database/migrations/$npm_config_name",
    "migration:generate": "cross-var npm run typeorm -- migration:generate ./src/database/migrations/$npm_config_name",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert"
  },
  "volta": {
    "node": "22.2.0"
  }
}
